<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div id="wrapper">
    <header>
      <div id="page-banner">
        <h1 class="title"><%= titleTwo %></h1>
        <p><%= titleAlt %></p>
        <form id="search-topics">
          <input type="text" placeholder="Search topics..." />
        </form>
      </div>
    </header>
    <div id="topic-list">
      <h2 class="title"><%= topicList %></h2>
      <ul>
        <% listItems.forEach(item => {  %>
        <li>
          <span class="name"><%= item %></span>
          <span class="delete">delete</span>
        </li>
        <% }); %>
      </ul>
    </div>
    <form action="/" id="add-topic" method="POST">
      <input type="checkbox" id="hide" />
      <label id='hide' for="hide"> Hide all topics </label>
      <input type="text" id='add' name="newItem" placeholder="Add a topic..." />
      <button>Add</button>
    </form>
    <div id='footer'></div>
  </div>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</body>

</html>