<%- include('header'); -%>

<body class="todo">

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
        <% for (let i = 0; i < newListItems.length; i++) { %>
        <div class="item">
            <input type="checkbox" />
            <p><%= newListItems[i] %></p>
        </div>

        <% } %>
        <form class="item" action="/todo" method="post">
            <input id="inputItem"  type="text" name="newItem" placeholder="New Item" autocomplete="off" />
            <button id="button" type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
</body>

<%- include('footer'); -%>