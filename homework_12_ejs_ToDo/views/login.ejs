<%- include('header'); -%>

<body id="loginForm">
    <div class="container" style="text-align:center">
        <!-- <%- include('header'); -%> -->

        <h1 class="form-heading">
            Welcome App
            <hr />
            <%= listTitle %>
        </h1>

        <form action="/login" class="form-signin" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">SIGNUP</h1>

            <input type="text" name="inputname" class="form-control top is-invalid" placeholder="First Name" required
                autofocus />
            <input type="email" name="inputemail" class="form-control middle" placeholder="Email" required />
            <input type="text" name="inputpassword" class="form-control bottom" placeholder="Passwoord" required />
            <div class="invalid-feedback">
                Please enter a message in the textarea.
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Login
            </button>

        </form>
    </div>
</body>

<%- include('footer'); -%>